@model IEnumerable<RecuirementManagement.Models.Registration>
<link href="~/Content/css/regform.css" rel="stylesheet" />

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetInformation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/tablecss.css" rel="stylesheet" />
    <link href="~/Content/css/logo.css" rel="stylesheet" />
    <link href="~/Content/css/hrProfile.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">
                <div class="logo">
                    <span class="circle">im</span>
                </div>
            </a>
            <a class="navbar-brand" href="#">
                <h1 class="logo-text">Impact <span class="dot">.</span></h1>
            </a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Logout
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index","Hr")">Home</a>
                            <a class="dropdown-item" href="@Url.Action("UploadImage","Image")">Upload Image</a>
                            <a class="dropdown-item" href="@Url.Action("Logout", "Hr")">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="profile-picture"></div>
        </nav>
    </header>
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <div class="container1">
        <table class="table table-striped table-bordered table-custom">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First name</th>
                    <th scope="col">Last name</th>
                    <th scope="col">Date of birth</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Phone number</th>
                    <th scope="col">Email address</th>
                    <th scope="col">Address</th>
                    <th scope="col">State</th>
                    <th scope="col">City</th>
                    <th scope="col">Username</th>
                    <th scope="col">Password</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.cid)</th>
                        <td>@Html.DisplayFor(modelItem => item.firstName)</td>
                        <td>@Html.DisplayFor(modelItem => item.lastName)</td>
                        <td>@Html.DisplayFor(modelItem => item.dob)</td>
                        <td>@Html.DisplayFor(modelItem => item.gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.email)</td>
                        <td>@Html.DisplayFor(modelItem => item.address)</td>
                        <td>@Html.DisplayFor(modelItem => item.state)</td>
                        <td>@Html.DisplayFor(modelItem => item.city)</td>
                        <td>@Html.DisplayFor(modelItem => item.username)</td>
                        <td>@Html.DisplayFor(modelItem => item.password)</td>

                        <td>
                            @*<a href="@Url.Action("EditInformation", new { cid = item.cid })" class="btn btn-success">Edit</a>*@
                            <a href="@Url.Action("DeleteInformation", new { cid = item.cid })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <footer>
        <div class="footer">
            <p>&copy; @DateTime.Now.Year - Impact. All Rights Reserved</p>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
</body>
</html>
