@model IEnumerable<RecuirementManagement.Models.Education>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EducationDetails</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    <link href="~/Content/css/regform.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/logo.css" rel="stylesheet" />
    <link href="~/Content/css/candidatePage.css" rel="stylesheet" />
</head>
<body class="body-bg">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">
                <div class="logo">
                    <span class="circle">im</span>
                </div>
            </a>
            <a class="navbar-brand" href="#">
                <h1 class="logo-text">Impact <span class="dot">.</span></h1>
            </a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Logout
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index","Candidate")">Home</a>
                            <a class="dropdown-item" href="@Url.Action("Logout", "Candidate")">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container mt-4 container-bg">
        @*style="background-image: url('/Images/bg.jpg'); background-size: cover; background-repeat: no-repeat; background-attachment: fixed; background-position: center center;">*@
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Education Details</h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><strong>Education ID:</strong> @item.eid</li>
                                <li class="list-group-item"><strong>Candidate ID:</strong> @item.cid</li>
                                <li class="list-group-item"><strong>Highest Qualification:</strong> @item.highestQualification</li>
                                <li class="list-group-item"><strong>Pass Year:</strong> @item.passYear</li>
                                <li class="list-group-item"><strong>CGPA:</strong> @item.cgpa</li>
                                <li class="list-group-item"><strong>Work Experience:</strong> @item.workExperience</li>
                                <li class="list-group-item"><strong>Number of Years:</strong> @item.noofYears</li>
                                <li class="list-group-item"><strong>Job Role:</strong> @item.jobRole</li>
                                <li class="list-group-item"><strong>Last Salary:</strong> @item.lastSalary</li>
                                <li class="list-group-item"><strong>Skills:</strong> @item.skills</li>
                                <li class="list-group-item"><strong>Status:</strong> @item.status</li>
                            </ul>
                            <p class="text-center" style="color: orangered;">Please note your education ID and candidate ID for applying the job</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <footer class="fixed-bottom">
        <div class="footer">
            <p>&copy; @DateTime.Now.Year - Impact. All Rights Reserved</p>
        </div>
    </footer>
</body>
</html>
