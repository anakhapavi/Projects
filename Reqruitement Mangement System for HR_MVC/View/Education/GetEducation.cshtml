@model IEnumerable<RecuirementManagement.Models.Education>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetEducation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    <link href="~/Content/css/regform.css" rel="stylesheet" />
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/tablecss.css" rel="stylesheet" />
    <link href="~/Content/css/logo.css" rel="stylesheet" />
    <link href="~/Content/css/hrProfile.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">
                <div class="logo">
                    <span class="circle">im</span>
                </div>
            </a>
            <a class="navbar-brand" href="#">
                <h1 class="logo-text">Impact <span class="dot">.</span></h1>
            </a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Logout
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index","Hr")">Home</a>
                            <a class="dropdown-item" href="@Url.Action("UploadImage","Image")">Upload Image</a>
                            <a class="dropdown-item" href="@Url.Action("Logout", "Hr")">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="profile-picture"></div>
        </nav>
    </header>

    <div class="container1">
        <table class="table table-striped table-bordered table-custom">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Candidate Id</th>
                    <th scope="col">Highest Qualification</th>
                    <th scope="col">Pass Year</th>
                    <th scope="col">CGPA</th>
                    <th scope="col">Work Experience</th>
                    <th scope="col">No. of Years</th>
                    <th scope="col">Job Role</th>
                    <th scope="col">Last Salary</th>
                    <th scope="col">Skills</th>
                    <th scope="col">Status</th>
                    <th scope="col"></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => item.eid)</th>
                        <td>@Html.DisplayFor(modelItem => item.cid)</td>
                        <td>@Html.DisplayFor(modelItem => item.highestQualification)</td>
                        <td>@Html.DisplayFor(modelItem => item.passYear)</td>
                        <td>@Html.DisplayFor(modelItem => item.cgpa)</td>
                        <td>@Html.DisplayFor(modelItem => item.workExperience)</td>
                        <td>@Html.DisplayFor(modelItem => item.noofYears)</td>
                        <td>@Html.DisplayFor(modelItem => item.jobRole)</td>
                        <td>@Html.DisplayFor(modelItem => item.lastSalary)</td>
                        <td>@Html.DisplayFor(modelItem => item.skills)</td>
                        <td>
                            <span class="@(item.status == "Approved" ? "text-success" : item.status == "pending" ? "text-danger" : "")">
                                @Html.DisplayFor(modelItem => item.status)
                            </span>

                        </td>
                        <td>
                        <td>
                            <a href="@Url.Action("EditEducation", new { eid = item.eid })" class="btn btn-primary">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <footer>
        <div class="footer">
            <p>&copy; @DateTime.Now.Year - Impact. All Rights Reserved</p>
        </div>
    </footer>
</body>
</html>
