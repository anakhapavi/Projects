
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HR DASHBOARD</title>
    <link href="~/Content/css/regform.css" rel="stylesheet" />
    <!-- Include Bootstrap CSS and JS files -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script src="~/Scripts/js/logout.js"></script>
    <link href="~/Content/css/prograssbar.css" rel="stylesheet" />
    <link href="~/Content/css/logo.css" rel="stylesheet" />
    <link href="~/Content/css/hr.css" rel="stylesheet" />
    <link href="~/Content/css/hrProfile.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-transparent">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">
                <div class="logo">
                    <span class="circle">im</span>
                </div>
            </a>
            <a class="navbar-brand" href="#">
                <h1 class="logo-text">Impact <span class="dot">.</span></h1>
            </a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Logout
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="profileDropdown">
                            <a class="dropdown-item" href="@Url.Action("UploadImage","Image")">Upload Image</a>
                            <a class="dropdown-item" href="@Url.Action("Logout", "Hr")">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="profile-picture"></div>
        </nav>
    </header>
    <div class="row">
        <!-- Container 1: View Registered Candidates -->
        <div class="col-md-4">
            <div class="image-card">
                <img class="card-img-top" src="~/Images/candidate.jpg" alt="Card image">
                <div class="card-body">
                    <h5 class="card-title">Registerd Candidates</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a href="@Url.Action("GetInformation", "Registration")" class="btn btn-primary">Personal Details</a></li>
                    <li class="list-group-item"><a href="@Url.Action("GetEducation", "Education")" class="btn btn-primary">Education Details</a></li>
                </ul>
            </div>
        </div>

        <!-- Container 2: Add and View Vacancies -->
        <div class="col-md-3">
            <div class="image-card">
                <img class="card-img-top" src="~/Images/hring_new.jpg" alt="Card image">
                <div class="card-body">
                    <h5 class="card-title">Vaccancies</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a href="@Url.Action("AddVaccancy", "Vaccancy")" class="btn btn-primary">Add Jobs</a></li>
                    <li class="list-group-item"><a href="@Url.Action("GetVaccancies", "Vaccancy")" class="btn btn-primary">Current Jobs</a></li>
                </ul>
            </div>
        </div>

        <!-- Container 3: View and sheddule for interview -->
        <div class="col-md-4">
            <div class="image-card">
                <img class="card-img-top" src="~/Images/shedule.jpg" alt="Card image">
                <div class="card-body">
                    <h5 class="card-title">Schedule</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><a href="@Url.Action("GetAllApplicationsDetails", "Application")" class="btn btn-primary">Applied Candidates</a></li>
                    <li class="list-group-item"><a href="@Url.Action("AddSchedule", "Schedule")" class="btn btn-primary">Schedule for Interview</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="row d-flex justify-content-center mt-100">
        <div class="col-md-12">
            <!--  Progress Bar (90% Blue)-->
            <div class="text-progress-container">
                <div class="text-progress-item">
                    <p>Registerd Candidates</p>
                    <div class="progress blue">
                        <span class="progress-left">
                            <span class="progress-bar"></span>
                        </span>
                        <span class="progress-right">
                            <span class="progress-bar"></span>
                        </span>
                        <div class="progress-value">90%</div>
                    </div>
                </div>
                <!--  Progress Bar (35% Yellow)-->
                <div class="text-progress-item">
                    <p>Selected Candidates</p>
                    <div class="progress yellow">
                        <span class="progress-left">
                            <span class="progress-bar"></span>
                        </span>
                        <span class="progress-right">
                            <span class="progress-bar"></span>
                        </span>
                        <div class="progress-value">35%</div>
                    </div>
                </div>
                <!-- Progress Bar (100% Green) -->
                <div class="text-progress-item">
                    <p>Applied Canidates</p>
                    <div class="progress green">
                        <span class="progress-left">
                            <span class="progress-bar"></span>
                        </span>
                        <span class="progress-right">
                            <span class="progress-bar"></span>
                        </span>
                        <div class="progress-value">50%</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="footer">
            <p>&copy; @DateTime.Now.Year - Impact. All Rights Reserved</p>
        </div>
    </footer>
</body>
</html>
