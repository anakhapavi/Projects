    <!-- Content Sections -->
    <section id="about">
        <!-- About Us content here -->
        <div class="about-content">
            <h2><u>About us</u></h2>
            <div class="about-images">
                <div class="about-image">
                    <img src="~/Images/team2.jpg" alt="Image Description">
