@model IEnumerable<RecuirementManagement.Models.Vaccancy>
@*@{
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}**@


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetVaccancies</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/custom.css" rel="stylesheet">
</head>
<body>
    <style>
        body {
            background-color: #00AF91;
        }
        .card {
            height: 500px; 
        }
    </style>  
    <section id="vaccancies" class="vaccancy sections-bg">
        <div class="container" data-aos="fade-up">
            <div class="section-header">
                <h2>Current Jobs</h2>
                <p>Apply for your dream job.</p>
            </div>

             <div class="row gy-5" data-aos="fade-up" data-aos-delay="100">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card bg-light mb-5">
                            <div class="card-header">@Html.DisplayFor(modelItem => item.jobRole)</div>
                            <div class="card-body">
                                <h5 class="card-title">Skills</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.skills)</p>
                                <h5 class="card-title">Availability</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.available)</p>
                                <h5 class="card-title">Experience</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.experience)</p>
                                <p class="card-text" style="color:red">@Html.DisplayFor(modelItem => item.currentStatus)</p>
                                <a href="#" class="btn btn-success" data-toggle="modal" data-target="#applyModal">Apply</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- Modal -->
    <div class="modal fade" id="applyModal" tabindex="-1" role="dialog" aria-labelledby="applyModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="applyModalLabel">Apply for Job</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Hi! Are you interested in this job?</p>
                    <p>If you are a new candidate, please <a href=@Url.Action("AddInformation", "Registration")>register here</a>.</p>
                    <p>If you already have an account, please <a href=@Url.Action("Logindetails","Login")>login here</a>.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.18.0/font/bootstrap-icons.css" rel="stylesheet">
    @*<script>
        $(document).ready(function () {
            $('#applyModal').modal('show');
        });
    </script>*@
</body>
</html>


